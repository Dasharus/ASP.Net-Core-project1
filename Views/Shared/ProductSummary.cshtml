@model greystore.Models.Product

<div class="col-sm-4">
    <h4>
        @Model.Name
        <span class="badge" style="float:right;">
            <small style="color: white; font-weight: bold">
                @Model.Price.ToString("c")
            </small>
        </span>
    </h4>
    <div class="card-text p-1">@Model.Description</div>
</div>